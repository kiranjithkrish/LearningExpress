<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Users</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .custom-navbar {
      background-color: #007bff; /* Blue navbar background color */
    }
  </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark custom-navbar mb-4">
  <div class="container">
    <a class="navbar-brand" href="#">Search Users</a>
  </div>
</nav>

<div class="container custom-container">
  <div class="row">
    <div class="col">
      <form id="searchForm">
        <div class="mb-3">
          <label for="firstNameInput" class="form-label">First Name</label>
          <input type="text" class="form-control" id="firstNameInput" name="first_name"  placeholder="Enter first name" value= "<%= qs.first_name %>"/>
        </div>
        <div class="mb-3">
          <label for="lastNameInput" class="form-label">Last Name</label>
          <input type="text" class="form-control" id="lastNameInput" name="last_name"  placeholder="Enter last name" value="<%= qs.last_name %>" />
        </div>
        <div class="mb-3">
            <label for="emailInput" class="form-label">Email</label>
            <input type="email" class="form-control" id="emailInput" name="email"  placeholder="Enter email" value="<%= qs.email %>" />
          </div>
        <div class="mb-3">
          <label for="ageInput" class="form-label">Age (Greater Than or Equal To)</label>
          <input type="number" class="form-control" id="ageInput" name="age"  placeholder="Enter age" value= "<%= qs.age %>"/>
        </div>
        <button type="submit" class="btn btn-primary btn-search">Search</button>
      </form>
    </div>
  </div>
  <% if (isSearchResult) { %>
  <div class="row mt-4">
    <div class="col">
      <h3>Search Result</h3>
      <div id="searchResult" class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Serial No.</th>
              <th>User ID</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Age</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user, index) => { %>
            <tr>
              <td><%= index+1 %></td>
              <td><%= user._id %></td>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.age %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% } %>
  <% if (isError) { %>
  <div id="errorAlert" class="alert alert-danger" role="alert">
    An error occurred during search. Please try again later.
  </div>
  <% } %>
</div>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
